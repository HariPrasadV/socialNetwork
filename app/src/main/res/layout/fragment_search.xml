<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="db.socialnetwork.Search">

    <!-- TODO: Update blank fragment layout -->
    <db.socialnetwork.CustomAutoComplete
        android:id ="@+id/comp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="Enter search term"
        android:completionThreshold="3"></db.socialnetwork.CustomAutoComplete>
    <TextView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        style="@style/buttonStyle"
        android:text="cancel"/>

    <LinearLayout
        android:id="@+id/useroptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/userposts"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="48dp"
        style="@style/buttonStyle"
        android:text="posts"/>
        <TextView
            android:id="@+id/userfollow"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            style="@style/buttonStyle"
            android:text="follow"/>
        <TextView
            android:id="@+id/userunfollow"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            style="@style/buttonStyle"
            android:text="unfollow"/>

    </LinearLayout>

    <ListView
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:id="@+id/idposts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>
